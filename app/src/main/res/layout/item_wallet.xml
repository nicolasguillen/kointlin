<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_asset_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@null"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/item_asset_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_alignTop="@+id/item_asset_icon"
        android:layout_alignBottom="@+id/item_asset_icon"
        android:layout_toEndOf="@+id/item_asset_icon"
        android:layout_toStartOf="@+id/item_asset_amount"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/item_asset_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/item_asset_icon"
        android:layout_alignBottom="@+id/item_asset_icon"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center_vertical"/>

</RelativeLayout>